{
  "manifest_version": 3,
  "name": "DalatBDS Broker Extension",
  "version": "1.0.0",
  "description": "Extension hỗ trợ môi giới DalatBDS (Fix lỗi kết nối)",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "utils.js",
        "extensionState.js",
        "heuristicsRedefinitions.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "DalatBDS Extension"
  }
}
